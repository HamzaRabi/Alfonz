<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android">

	<data>
		<variable
			name="view"
			type="org.alfonz.samples.alfonzgraphics.GraphicsSampleView" />
		<variable
			name="viewModel"
			type="org.alfonz.samples.alfonzgraphics.GraphicsSampleViewModel" />
	</data>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/global_keyline_16"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/graphics_sample_image_blur"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/global_spacing_16"
				android:adjustViewBounds="true"
				android:scaleType="fitCenter" />

			<ImageView
				android:id="@+id/graphics_sample_image_reflection"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/global_spacing_16"
				android:adjustViewBounds="true"
				android:scaleType="fitCenter" />

			<ImageView
				android:id="@+id/graphics_sample_image_scaler"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/global_spacing_16"
				android:adjustViewBounds="true"
				android:scaleType="fitCenter" />

			<ImageView
				android:id="@+id/graphics_sample_image_circular"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/global_spacing_16"
				android:adjustViewBounds="true"
				android:scaleType="fitCenter" />

			<ImageView
				android:id="@+id/graphics_sample_image_rounded"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/global_spacing_16"
				android:adjustViewBounds="true"
				android:scaleType="fitCenter" />

			<ImageView
				android:id="@+id/graphics_sample_image_placeholder"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/global_spacing_16"
				android:adjustViewBounds="true"
				android:scaleType="fitCenter" />

		</LinearLayout>
	</ScrollView>

</layout>
